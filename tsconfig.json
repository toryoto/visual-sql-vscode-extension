{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2020",
		"lib": [
			"ES2020",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"jsx": "react-jsx",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false,
		"declaration": true,
		"outDir": "dist",
		"noImplicitAny": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts",
		"**/*.test.tsx"
	]
}
